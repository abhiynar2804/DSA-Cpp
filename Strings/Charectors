#include <iostream>
#include <string.h>
using namespace std;

int getLength(char name[]) {
    int length = 0;
    int i = 0;
    while (name[i] != '\0') {
        length++;
        i++;
    }
    return length;
}

int reverseCharArray(char name[]) {
    int i = 0;
    int n = getLength(name);
    int j = n - 1;

    while (i < j) {
        swap(name[i], name[j]);
        i++;
        j--;
    }
    return 0;
}

void replaceSpaces(char sentence[]) {
   int i = 0;
   int n = getLength(sentence);

   for(int i = 0; i < n; i++) {
       if(sentence[i] == ' ') {
           sentence[i] = '@';
       }
   }
}

bool checkPalindrome(char name[]) {
    int i = 0;
    int n = getLength(name);
    int j = n - 1;

    while (i <= j) {
        if (name[i] != name[j]) {
            return false;
        }
        i++;
        j--;
    }
    return true;
}

